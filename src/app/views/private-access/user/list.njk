{% extends "private-access/layout.njk" %}

{% block head %}
    <title>Usuários</title>
    <link rel="stylesheet" href="/styles/private-access/user/list.css">
{% endblock head %}

{% block content %}

    <div class="container">

        <div class="title">
            <h2>Usuários</h2>

            {% if sessionIsAdmin.is_admin == true %}
                <a href="/admin/users/create">Novo</a>
            {% endif %}
        </div>

        <div class="cards">

            {% for user in users %}

                <div class="card">
                    <h3>{{user.name}}</h3>
                    <p>{{user.email}}</p>

                    <div class="buttons">
                        {% if session.userId == user.id or sessionIsAdmin.is_admin == true %}
                            <a class="edit" href="/admin/users/{{user.id}}/edit">Editar</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock content %}