{% extends "private-access/session/layout.njk" %}

{% block head %}
    <title>Recuperar senha</title>
{% endblock head %}

{% block content %}
    <h3>Esqueceu a senha?</h3>

    <form method="POST" action="/admin/users/forgot-password">
        <div class="item">
            <p>Email</p>
            <div class="input">
                <input type="email" name="email" placeholder="Digite seu email para recuperar sua senha">
            </div>
        </div>

        <div class="footer forgot-password">
            <button class="button" type="submit">Recuperar</button>
        </div>
    </form>
{% endblock content %}