{% extends "private-access/session/layout.njk" %}

{% block head %}
    <title>Nova senha</title>
{% endblock head %}

{% block content %}
    <h3>Nova senha</h3>

    <form method="POST" action="/admin/users/change-password">
        <div class="item">
            <p>Email</p>
            <div class="input">
                <input type="email" name="email" placeholder="Digite seu email">
            </div>
        </div>

        <div class="item">
            <p>Nova senha</p>
            <div class="input">
                <input type="password" name="password" placeholder="Digite sua nova senha">
            </div>
        </div>

        <div class="item">
            <p>Repetir senha</p>
            <div class="input">
                <input type="password" name="confirmPassword" placeholder="Repita a nova senha">
            </div>
        </div>

        <div class="footer forgot-password">
            <button class="button" type="submit">Nova senha</button>
        </div>

        <input type="hidden" name="token" value="{{token}}">
    </form>
{% endblock content %}